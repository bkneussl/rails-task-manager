<h2>My Tasks</h2>
<% @tasks.each do |task| %>
<p>
  <%= check_box('task', task.id, {checked: task.completed}) %>
  <%= link_to task.title, task_path(task) %>
  <%= link_to '<i class="fas fa-trash"></i>'.html_safe, task_path(task.id),
  method: :delete,
  data: { confirm: "Are you sure?" } %>
</p>
<% end %>
  <%= link_to "Add a new Task", new_path %>

